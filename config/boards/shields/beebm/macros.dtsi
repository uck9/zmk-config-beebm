macro_copy: macro_copy {
    compatible = "zmk,behavior-macro";
    label = "macro_copy";
    #binding-cells = <0>;
    wait-ms = <20>;
    tap-ms = <10>;
    bindings = 
        <&macro_press &kp LEFT_CTRL>,
        <&macro_tap &kp C>;
        <&macro_release &kp LEFT_CTRL>,
};
macro_paste: macro_paste {
    compatible = "zmk,behavior-macro";
    label = "macro_paste";
    #binding-cells = <0>;
    wait-ms = <20>;
    tap-ms = <10>;
    bindings = 
        <&macro_press &kp LEFT_CTRL>,
        <&macro_tap &kp V>;
        <&macro_release &kp LEFT_CTRL>,
};